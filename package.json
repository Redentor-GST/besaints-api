{
  "name": "testify2",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev src/index.ts",
    "test": "jest --verbose --silent=false --runInBand --detectOpenHandles --forceExit",
    "cov": "jest --verbose --silent=false --runInBand --detectOpenHandles --forceExit --coverage",
    "lint": "ts-standard src/**/*.ts",
    "populate": "ts-node src/scripts/populateDatabase.ts",
    "populate-saints": "ts-node src/scripts/populateSaints.ts",
    "populate-phrases": "ts-node src/scripts/populatePhrases.ts"
  },
  "eslintConfig": {
    "extends": "./node_modules/ts-standard/eslintrc.json",
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@eslint/js": "^9.36.0",
    "@jest/globals": "^29.4.1",
    "@types/express": "^4.17.16",
    "@types/jest": "^29.4.0",
    "@types/supertest": "^2.0.12",
    "babel-jest": "^29.4.1",
    "eslint": "^8.57.1",
    "globals": "^16.4.0",
    "jest": "^29.4.1",
    "jiti": "^2.6.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node-dev": "^2.0.0",
    "ts-standard": "^12.0.2",
    "typescript": "^4.9.4",
    "typescript-eslint": "^8.44.1"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.4.1",
    "dotenv": "^16.0.3",
    "express": "4.18.2",
    "mongodb": "^4.13.0",
    "sqlite3": "^5.1.7"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/db/saints.ts",
      "!src/db/phrases.ts"
    ]
  }
}
